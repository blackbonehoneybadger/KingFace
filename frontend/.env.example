# KingFace Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Solana Configuration
NEXT_PUBLIC_SOL_RPC=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_KFTL_MINT=YOUR_KFTL_TOKEN_MINT_ADDRESS

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_NFT_STORAGE_API_KEY=your_nft_storage_api_key

# App Configuration
NEXT_PUBLIC_APP_NAME=KingFace
NEXT_PUBLIC_APP_URL=https://kingface.app
NEXT_PUBLIC_SUPPORT_EMAIL=support@kingface.app

# Analytics & Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_VOTING=false
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=false

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false