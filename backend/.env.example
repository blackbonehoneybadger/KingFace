# KingFace Backend Environment Variables

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/kingface
DATABASE_URL_TEST=postgresql://user:password@localhost:5432/kingface_test

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
KFTL_MINT_ADDRESS=YOUR_KFTL_TOKEN_MINT_ADDRESS
SOLANA_PRIVATE_KEY=your_base58_encoded_private_key
TREASURY_WALLET=your_treasury_wallet_address

# IPFS Configuration
NFT_STORAGE_API_KEY=your_nft_storage_api_key
IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@kingface.app

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key

# Security
CORS_ORIGINS=http://localhost:3000,https://kingface.app
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_AIRDROP=true
ENABLE_MARKETPLACE=true
ENABLE_ADMIN_ENDPOINTS=false
ENABLE_RATE_LIMITING=true

# Development
MOCK_SOLANA=false
SKIP_MIGRATIONS=false